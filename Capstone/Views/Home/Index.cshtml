@using Microsoft.AspNetCore.Mvc.Localization
@{
    ViewData["Title"] = "Home Page";
}
@inject IViewLocalizer Localizer
<div class="container my-4">
    <h2 class="mb-4">@Localizer["ChooseTemplate"]</h2>
    <div class="d-flex flex-row overflow-auto">
        <a href="/Template/Create" class="card m-2 flex-shrink-0" style="width: 14rem; text-decoration: none; color: inherit;">
            <div class="card-body d-flex flex-column align-items-center justify-content-center">
                <i class="bi bi-plus-circle display-4 text-primary mb-3"></i>
                <h5 class="card-title">@Localizer["NewTemplate"]</h5>
            </div>
        </a>
        @foreach (var template in Model)
        {
            <div class="card m-2 flex-shrink-0" style="width: 14rem; text-decoration: none; color: inherit;">
                <a href="@Url.Action("Edit", "Template", new { id = template.Id })">
                    <div class="card-body">
                        <h5 class="card-title text-truncate" style="max-width: 100%;">@template.Title</h5>
                        <p class="card-text">
                            @template.Description
                        </p>
                    </div>
                </a>
                <div class="card-footer" style="min-height: 100%;">
                    <div class="row">
                        <div class="col d-flex justify-content-center align-items-center">
                            <i class="bi bi-heart"></i>
                        </div>
                        <div class="col d-flex justify-content-center align-items-center">
                            <i class="bi bi-chat"></i>
                        </div>
                        <div class="col d-flex justify-content-center align-items-center">
                            <i class="bi bi-send"></i>
                        </div>
                    </div>
                    <div class="d-flex justify-content-left">
                        <p class="mx-3">99 Likes</p>
                    </div>
                </div>
            </div>
           
        }
    </div>
</div>
<hr/>
<div class="container my-4">
    <h2 class="mb-4">@Localizer["AnswerTheForm"]</h2>
    <div class="d-flex flex-row overflow-auto">
        @foreach (var template in Model)
        {
            <a href="@Url.Action("Fill", "Form", new { templateId = template.Id })"
               class="card m-2 flex-shrink-0" style="width: 14rem; text-decoration: none; color: inherit;">
                <div class="card-body">
                    <h5 class="card-title text-truncate" style="max-width: 100%;">@template.Title</h5>
                    <p class="card-text">
                        @template.Description
                    </p>
                </div>
            </a>
        }
    </div>
</div>
