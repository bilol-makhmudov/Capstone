@using Microsoft.AspNetCore.Mvc.Localization
@model Capstone.ViewModels.Account.LoginViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Login";
    <link href="~/css/account.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/fonts/material-icon/css/material-design-iconic-font.min.css">
}

<section class="sign-in">
    <div>
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="~/images/login-photo.webp" alt="sing up image"></figure>
                <p class="mb-0 signup-image-link">
                    <a asp-action="Register">Create an account</a>
                </p>
            </div>
            <div class="signin-form">
                <h2 class="form-title">Sign up</h2>
                <form method="POST" class="register-form" id="login-form" asp-action="Login">
                    <div class="form-group">
                        <label asp-for="Email" for="email"><i class="zmdi zmdi-email"></i></label>
                        <input type="email" asp-for="Email" name="email" id="email" placeholder="@Localizer["YourEmail"]"/>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" for="Password"><i class="zmdi zmdi-lock"></i></label>
                        <input type="password" asp-for="Password" name="Password" id="Password" placeholder="@Localizer["YourPassword"]"/>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <input type="checkbox" asp-for="RememberMe" id="RememberMe" class="agree-term form-check-input" />
                        <label asp-for="RememberMe" class="label-agree-term form-check-label" for="RememberMe">
                            <span><span></span></span>@Localizer["RememberMe"]
                        </label>
                        <span asp-validation-for="RememberMe" class="text-danger small"></span>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signin" id="signin" class="form-submit" value="Log in"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>