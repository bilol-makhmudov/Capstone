@model Capstone.ViewModels.Template.CreateTemplateViewModel

<div class="modal fade" id="templateSettingsModal" tabindex="-1" aria-labelledby="templateSettingsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="templateSettingsModalLabel">Template Settings</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label asp-for="SelectedTagIds" class="form-label">Select Tags</label>
                    <select asp-for="SelectedTagIds" id="modal-tags" name="SelectedTagIds" multiple="multiple" class="form-control select2" data-placeholder="-- Select or Add Tags --">
                        @foreach (var tag in Model.Tags)
                        {
                            <option value="@tag.Id">@tag.TagName</option>
                        }
                    </select>
                    <span asp-validation-for="SelectedTagIds" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label asp-for="TopicId" class="form-label">Select Topic</label>
                        <select id="TemplateTopic" asp-for="TopicId" class="form-control select2" data-placeholder="-- Select Topic --">
                            <option value="">Select Topic</option>
                            @foreach (var topic in Model.Topics)
                            {
                                <option value="@topic.Id">@topic.TopicName</option>
                            }
                        </select>
                        <span asp-validation-for="TopicId" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label asp-for="IsPublic" class="form-label">Access</label>
                        <select asp-for="IsPublic" id="templateAccessibility" class="form-control select2" data-placeholder="-- Select Accessibility --">
                            <option value="true">Public</option>
                            <option value="false">Restricted</option>
                        </select>
                        <span asp-validation-for="IsPublic" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group" id="templateUserGroup" style="display: none;">
                    <label asp-for="TemplateUserIds" class="form-label">Select Users</label>
                    <select id="templateUsers" asp-for="TemplateUserIds" name="TemplateUsers" multiple="multiple" class="form-control select2" data-placeholder="-- Select Users --">
                    </select>
                    <span asp-validation-for="TemplateUserIds" class="text-danger"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="save-template-settings">Save Settings</button>
            </div>
        </div>
    </div>
</div>