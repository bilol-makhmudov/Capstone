@model Capstone.ViewModels.Template.CreateTemplateViewModel

@{
    ViewData["Title"] = "Create Template";
}

<div style="background-color: #f0f0f0" class="d-flex justify-content-center">
    <div style="background-color: #fdfdfd" class="container-sm min-vh-100">
        <div class="row justify-content-center">
            <img src="" class="img-fluid mt-3" alt="Image" id="img-on-top">
            <div class="col-12 col-lg-10 mt-5">
                <h2 class="mb-4 text-center" contenteditable="true">Title goes here</h2>
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <h5 class="mb-4 text-left text-muted" contenteditable="true">Description goes here</h5>
                    <hr/>
                    <div id="questions-container">
                    </div>
                    <button type="submit" class="btn btn-success mt-3">Create Template</button>
                </form>
            </div>
        </div>
    </div>

    <div class="position-fixed top-50 translate-middle-y end-0 me-3 d-none d-lg-flex flex-column align-items-center bg-white shadow-sm rounded"
         style="background-color: #fdfdfd !important;">
        <button type="button" id="add-question-btn" class="m-1" style="border-radius: 50%;">
            <i class="bi bi-plus h4"></i>
        </button>
        <div class="template-img-top m-1">
            <label for="img-upload">
                <i class="bi bi-file-earmark-image h2" id="img-upload-icon" style="cursor: pointer;"></i>
            </label>
            <input asp-for="Image" id="img-upload" type="file"
                   accept="image/png, image/jpeg, image/heic, image/heif, image/hevc"
                   class="form-control-file" style="display: none;"/>
        </div>
        <button type="button" data-bs-toggle="modal" data-bs-target="#templateSettingsModal" id="template-settings-btn" class="m-1" style="border-radius: 50%;" title="Template Settings">
            <i class="bi bi-star h4"></i>
        </button>
    </div>

    
