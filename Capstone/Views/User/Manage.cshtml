@{
    ViewData["Title"] = "User Management";
}

<div class="container mt-5">
    <h2 class="mb-4">User Management</h2>

    <table id="usersTable" class="table table-striped table-bordered nowrap" style="width:100%">
        <thead>
        <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmationModel" tabindex="-1" aria-labelledby="confirmationModelLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form id="confirmationForm">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmation-title">Confirmation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="confirmation-question">Are you sure?</p>
                    <input type="hidden" id="deleteUserId" name="id" value="" />
                    <input type="hidden" id="actionType" name="actionType" value="" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/pages/user-management.js"></script>
}